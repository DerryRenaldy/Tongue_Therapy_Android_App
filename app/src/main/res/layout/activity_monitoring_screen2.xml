<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".bluetooth2.MonitoringScreen2"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/tvTanggal"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textSize="15dp">

        </TextView>

        <Button
            android:id="@+id/btnInfo"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:drawableEnd="@drawable/ic_info"
            android:padding="5dp"
            android:text="info  "
            android:textAlignment="textEnd"
            tools:ignore="TouchTargetSizeCheck">

        </Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvUser2"
                android:layout_width="194dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Current User: "
                android:textColor="@color/black"
                android:textSize="15dp" />

        <TextView
            android:id="@+id/tvUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textColor="@color/red"
            android:textSize="15dp"
            android:layout_weight="1"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llBatas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent">

        <EditText
            android:id="@+id/etBatas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:elevation="15dp"
            android:stateListAnimator="@null"
            android:textSize="18dp"
            android:hint="Limit"
            android:inputType="number"
            tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck">

        </EditText>

        <TextView
            android:id="@+id/tvBatasTekanan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:elevation="15dp"
            android:stateListAnimator="@null"
            android:textSize="18dp"
            android:hint="Batas"
            android:inputType="number"
            tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck"
            android:visibility="gone">
        </TextView>

        <TextView
            android:id="@+id/tvStatusTekanan"
            android:layout_width="520dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:hint="pressure state"
            android:layout_weight="1">

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <Button
            android:id="@+id/btnTonguePress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tongue Press"
            android:elevation="15dp"
            android:stateListAnimator="@null"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:background="@android:color/holo_green_dark"
            android:layout_weight="1">

        </Button>

        <Button
            android:id="@+id/btnTongueSlide1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Tongue Slide 1"
            android:elevation="15dp"
            android:stateListAnimator="@null"
            android:padding="5dp"
            android:background="@android:color/holo_green_dark"
            android:layout_weight="1">

        </Button>

        <Button
            android:id="@+id/btnTongueSlide2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:text="Tongue Slide 2"
            android:elevation="15dp"
            android:stateListAnimator="@null"
            android:background="@android:color/holo_green_dark"
            android:layout_weight="1">

        </Button>

        <TextView
            android:id="@+id/tvDataStatus1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="text button"
            android:visibility="gone">

        </TextView>

        <TextView
            android:id="@+id/tvDataStatus2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="text button"
            android:visibility="gone">

        </TextView>

        <TextView
            android:id="@+id/tvDataStatus3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="text button"
            android:visibility="gone">

        </TextView>

    </LinearLayout>

    <TextView
        android:id="@+id/tvButtonExercise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="text button"
        android:visibility="gone">

    </TextView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnClearInput"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:elevation="15dp"
            android:stateListAnimator="@null"
            android:layout_weight="1"
            android:text="Reset Reading" />

        <Button
            android:id="@+id/buttonReport"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@android:color/holo_blue_light"
            android:elevation="15dp"
            android:stateListAnimator="@null"
            android:text="SHOW RESULT"
            tools:ignore="TextContrastCheck" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonAverage"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@android:color/holo_blue_light"
                android:elevation="15dp"
                android:stateListAnimator="@null"
                android:text="Average"
                tools:ignore="TextContrastCheck"
                tools:layout_editor_absoluteX="148dp"
                tools:layout_editor_absoluteY="88dp" />

            <Button
                android:id="@+id/button3"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@android:color/holo_blue_light"
                android:elevation="15dp"
                android:stateListAnimator="@null"
                android:text="Start"
                tools:ignore="TextContrastCheck"
                tools:layout_editor_absoluteX="148dp"
                tools:layout_editor_absoluteY="88dp" />


            <Button
                android:id="@+id/button4"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@android:color/holo_red_light"
                android:elevation="15dp"
                android:stateListAnimator="@null"
                android:text="Disconnect"
                tools:ignore="TextContrastCheck"
                tools:layout_editor_absoluteX="108dp"
                tools:layout_editor_absoluteY="154dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/buttonSend"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@android:color/holo_blue_light"
                android:elevation="15dp"
                android:stateListAnimator="@null"
                android:text="SAVE DATA"
                tools:ignore="TextContrastCheck" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvStatusPembacaan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="not reading"
                android:gravity="center">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvRataTekanan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="average pressure :"
                android:gravity="center">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvStringResult1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="result sensor 1"
                android:textAlignment="center">

            </TextView>

            <TextView
                android:id="@+id/tvStringResult2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="result sensor 2"
                android:textAlignment="center">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvString1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center">

            </TextView>

            <TextView
                android:id="@+id/tvString2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="gone">

            <TextView
                android:id="@+id/textBantuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvRepetisi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:paddingStart="15dp"
                android:textSize="15dp">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:padding="5dp">

        <com.jjoe64.graphview.GraphView
            android:id="@+id/graph"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="150dip"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.583">

        </com.jjoe64.graphview.GraphView>

            <com.jjoe64.graphview.GraphView
                android:id="@+id/graph2"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="150dip"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.583">

            </com.jjoe64.graphview.GraphView>

        </LinearLayout>

        <ScrollView
            android:id="@+id/viewScroll2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvReport"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="10dp"
                android:background="#eeeeee"
                android:hint="Result shows up here ..."
                android:scrollbars="vertical"
                android:typeface="monospace"
                />

        </ScrollView>

        <LinearLayout
            android:id="@+id/viewScroll"
            android:layout_width="fill_parent"
            android:layout_height="180dp"
            android:layout_weight="1">

            <EditText
                android:id="@+id/txtReceive"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:layout_marginTop="10dp"
                android:background="#eeeeee"
                android:editable="false"
                android:gravity="center"
                android:maxLength="8"
                android:text="0"
                android:typeface="monospace"
                tools:ignore="TouchTargetSizeCheck" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>