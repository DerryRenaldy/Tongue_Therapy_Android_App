<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mainMenu.MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        android:src="@drawable/backgroundmainmenu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTanggalMainMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:elevation="15dp"
            android:gravity="center"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="18dp">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="15dp">

            <Button
                android:id="@+id/btnAccount"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_account_box"
                android:stateListAnimator="@null"
                android:text="Account"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textAlignment="center"
                android:textSize="16sp"
                android:background="@drawable/custom_button"
                tools:ignore="SpeakableTextPresentCheck">

            </Button>

            <Button
                android:id="@+id/btnPersonalData2"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="35dp"
                android:padding="5dp"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_condensed"
                android:stateListAnimator="@null"
                android:text="Personal Data"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textAlignment="center"
                android:textSize="16sp"
                android:background="@drawable/custom_button"
                tools:ignore="SpeakableTextPresentCheck">

            </Button>

            <Button
                android:id="@+id/buttonBt"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textAlignment="center"
                android:textSize="16sp"
                android:background="@drawable/custom_button"
                android:stateListAnimator="@null"
                android:text="Simple Reading">

            </Button>

            <Button
                android:id="@+id/buttonBt2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:stateListAnimator="@null"
                android:text="Tongue Exercise"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textAlignment="center"
                android:textSize="16sp"
                android:background="@drawable/custom_button">

            </Button>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

    </LinearLayout>


</RelativeLayout>